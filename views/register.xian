{{> head}}
<body class="min-h-screen bg-cover bg-center bg-no-repeat relative" style="background-image: url('https://i.ytimg.com/vi/GNAkv2CTl_8/maxresdefault.jpg');">
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  <div class="relative z-10 flex justify-center items-center min-h-screen py-10">
    <div class="w-full max-w-2xl">
      <!-- Logo/Header -->
      <div class="text-center mb-6">
        <div class="bg-white bg-opacity-95 backdrop-blur-md rounded-2xl p-6 shadow-xl border-2 border-white/50 hover:shadow-green-500/20 transition-all duration-300">
          <div class="flex items-center justify-center gap-2 mb-2">
            <span class="text-3xl">ğŸ–ï¸</span>
            <h1 class="text-3xl font-extrabold bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 bg-clip-text text-transparent tracking-tight uppercase">
              Balatasan
            </h1>
          </div>
          <p class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-2">Beach Resort</p>
          <p class="text-gray-700 text-sm font-bold uppercase tracking-wide">Create your account</p>
        </div>
      </div>

      <!-- Registration Form -->
      <form class="bg-white bg-opacity-95 backdrop-blur-md p-6 rounded-2xl shadow-xl border-2 border-white/50 hover:shadow-green-500/20 transition-all duration-300" method="POST" action="/register">
        <h2 class="text-2xl font-extrabold mb-6 text-center bg-gradient-to-r from-green-600 via-blue-600 to-purple-600 bg-clip-text text-transparent uppercase tracking-tight">Create Account</h2>
        
        {{#if error_msg}}
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
            <span class="block sm:inline">{{error_msg}}</span>
          </div>
        {{/if}}

        {{#if success_msg}}
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
            <span class="block sm:inline">{{success_msg}}</span>
          </div>
        {{/if}}

        <!-- Personal Information -->
        <div class="mb-6">
          <h3 class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-blue-600 mb-4 uppercase tracking-wide flex items-center gap-2">
            <span class="text-xl">ğŸ‘¤</span> Personal Information
          </h3>
          
          <div class="mb-4">
            <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="name">
              Full Name <span class="text-red-600">*</span>
            </label>
            <input 
              type="text" 
              id="name"
              name="name" 
              placeholder="Juan Dela Cruz" 
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 font-medium hover:border-green-400 text-sm" 
              required 
            />
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="email">
                ğŸ“§ Email <span class="text-red-600">*</span>
              </label>
              <input 
                type="email" 
                id="email"
                name="email" 
                placeholder="your.email@example.com" 
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 font-medium hover:border-green-400 text-sm" 
                required 
              />
            </div>

            <div>
              <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="phone">
                ğŸ“± Phone
              </label>
              <input 
                type="tel" 
                id="phone"
                name="phone" 
                placeholder="09171234567" 
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 font-medium hover:border-green-400 text-sm" 
              />
            </div>
          </div>

          <div class="mb-4">
            <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="address">
              ğŸ“ Address
            </label>
            <textarea 
              id="address"
              name="address" 
              placeholder="Complete address" 
              rows="2"
              class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-300 font-medium hover:border-green-400 resize-none text-sm"
            ></textarea>
          </div>
        </div>

        <!-- Security -->
        <div class="mb-6">
          <h3 class="text-lg font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600 mb-4 uppercase tracking-wide flex items-center gap-2">
            <span class="text-xl">ğŸ”’</span> Security
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="password">
                Password <span class="text-red-600">*</span>
              </label>
              <input 
                type="password" 
                id="password"
                name="password" 
                placeholder="Min 8 characters" 
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 font-medium hover:border-purple-400 text-sm" 
                required 
                minlength="8"
              />
            </div>

            <div>
              <label class="block text-gray-800 text-xs font-bold mb-2 uppercase tracking-wide" for="confirmPassword">
                Confirm <span class="text-red-600">*</span>
              </label>
              <input 
                type="password" 
                id="confirmPassword"
                name="confirmPassword" 
                placeholder="Re-enter password" 
                class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-all duration-300 font-medium hover:border-purple-400 text-sm" 
                required 
              />
            </div>
          </div>
        </div>

        <!-- Terms and Conditions -->
        <div class="mb-6">
          <label class="flex items-start group cursor-pointer">
            <input type="checkbox" class="form-checkbox h-4 w-4 text-green-600 rounded border-2 border-gray-300 focus:ring-2 focus:ring-green-500 transition-all mt-1" required>
            <span class="ml-3 text-xs text-gray-700 font-bold">
              I agree to the <a href="#" class="text-blue-600 hover:text-blue-800 font-bold hover:underline">Terms</a> 
              and <a href="#" class="text-blue-600 hover:text-blue-800 font-bold hover:underline">Privacy Policy</a>
            </span>
          </label>
        </div>

        <button 
          type="submit" 
          class="w-full bg-gradient-to-r from-green-500 via-blue-600 to-purple-600 hover:from-green-600 hover:via-blue-700 hover:to-purple-700 text-white font-bold py-3 rounded-lg transition-all duration-300 shadow-lg hover:shadow-green-500/50 transform hover:scale-105 uppercase tracking-wide text-sm"
        >
          ğŸŒ´ Create Account
        </button>

        <div class="mt-6 text-center">
          <p class="text-gray-700 font-bold text-sm">Already have an account? 
            <a href="/login" class="text-blue-600 hover:text-blue-800 font-bold uppercase tracking-wide hover:underline transition-all">Login here</a>
          </p>
        </div>
      </form>

      <!-- Additional Info -->
      <div class="mt-6 text-center">
        <div class="bg-white/80 backdrop-blur-md rounded-xl p-4 shadow-lg border-2 border-white/50">
          <p class="text-xs text-gray-700 font-bold uppercase tracking-wide mb-1">ğŸŒŠ Experience Verde Island Passage</p>
          <p class="text-xs text-gray-700 font-bold uppercase tracking-wide">ğŸ“§ info@balatasan-resort.com</p>
        </div>
      </div>
    </div>
  </div>
{{> footer }}